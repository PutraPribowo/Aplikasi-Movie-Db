<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f2f0f0" />
            <gradient  android:angle="-90"  android:startColor="#0824c1" android:endColor="#040ac2"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#001eff" />
            <solid  android:color="#f2f2f2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="5dip" android:color="#f2eeee" />
            <gradient  android:angle="-90"  android:startColor="#0227e4" android:endColor="#0010a1" />
        </shape>
    </item>
</selector>